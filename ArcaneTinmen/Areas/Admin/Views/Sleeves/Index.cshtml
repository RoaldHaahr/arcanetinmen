@model IEnumerable<ArcaneTinmen.Models.Sleeve>
@using ArcaneTinmen.HtmlHelpers

@{
    ViewBag.Title = "Sleeves";
}

<section class="section section-table">
    <h2>Sleeves</h2>
    <div class="table sleeve-table">
        <p style="text-align:right">
            @Html.ActionLink("Add new sleeve", "Create", null, new { @class = "link" })
        </p>
        <div>
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Width)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Height)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalePrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockAmount)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @item.Description.Truncate(30)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Width) mm
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Height) mm
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalePrice) kr.
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockAmount)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SleeveId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SleeveId}) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SleeveId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>


