@model IEnumerable<ArcaneTinmen.Models.Game>

@{
    ViewBag.Title = "Games";
}

<section class="section section-table">
    <h1>Games</h1>
    <div class="table sleeve-table">
        <p style="text-align:right">
            @Html.ActionLink("Add new game", "Create", null, new { @class = "link" })
        </p>
        <div>
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.GameId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.GameId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>



